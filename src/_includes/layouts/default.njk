{% from "partials/icon.njk" import icon %}
<!DOCTYPE html>
<html lang="en-US">

  <head>
    <!-- General meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% if page.indexing == false %}
      <meta name="robots" content="noindex">
    {% endif %}

    {% seo "" %}

    {% block head %}{% endblock %}

    <link rel="stylesheet" href="/assets/css/styles.css">

    {% include "partials/favicons.njk" %}

    {% if site.google_analytics %}
      {% include "partials/analytics.njk" %}
    {% endif %}
  </head>

  <body class="{% if page.slug %}{{ page.slug }}{% endif %}">
    <a class="skip-to-content-link" href="#main">Skip to content</a>
    <a class="skip-to-navigation-link" href="#navigation">
      {{ icon({ id: "nav", title: "Menu" }) }}
    </a>
    {% include "partials/icons.svg" %}
    {% include "partials/github-corner.njk" %}

    {% block main %}{% endblock %}

  </body>

  {% block foot %}{% endblock %}
</html>
